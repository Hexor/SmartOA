<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" 
	xmlns:android="http://schemas.android.com/apk/res/android">
		
        <LinearLayout android:id="@+id/title_bar" style="@style/ToolBar_Top"
       	xmlns:android="http://schemas.android.com/apk/res/android">	
	
   	    <RelativeLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1.0">
					
			<TextView android:textSize="18.0sp" android:textColor="#ffffffff"
				android:ellipsize="marquee" android:gravity="center" 
				android:text="@string/app_name"
				android:layout_width="wrap_content" 
				android:layout_height="fill_parent"			
				android:singleLine="true" 
				android:layout_centerHorizontal="true" />

		</RelativeLayout> 	    			
	</LinearLayout>

	
	<LinearLayout android:gravity="center_horizontal"
		android:orientation="vertical" 
		android:id="@+id/login_content"
		android:background="@drawable/normalloginbg"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
	  
	    <TextView android:textSize="20.0sp" 
	        android:textColor="#ff7acaf1"
			android:id="@+id/name_label" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:text="@string/nonosimcard"
			android:lineSpacingExtra="3dp"
			android:layout_marginTop="20.0dip"
			android:layout_marginLeft="10.0dip"
				android:layout_marginRight="10.0dip"
			/>
	    
	    <EditText
		    android:textSize="20.0sp" 
		    android:textColorHint="#ffcccccc"
			android:id="@+id/mobile_num" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:hint=" 请输入手机号码"
			android:singleLine="true"
		    android:inputType="phone"
		    android:layout_marginTop="20.0dip"
		    android:layout_marginLeft="10.0dip"
			android:layout_marginRight="10.0dip"
			android:background="@drawable/logandreg_input_bg"
		    />		
		
		<Button android:id="@+id/get_validate_code_btn"
			    android:background="@drawable/logandreg_btn"
			    android:text="获取验证码"
				style="@style/ShadowButtonText"			
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginTop="20.0dip"
				android:layout_marginLeft="10.0dip"
				android:layout_marginRight="10.0dip"
				/>	
				 
	</LinearLayout>
	
</LinearLayout>

